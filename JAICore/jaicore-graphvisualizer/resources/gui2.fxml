<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.embed.swing.SwingNode?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ProgressBar?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.152-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="newVisualizer.Controller">
    <top>
        <BorderPane>
            <top>
                <ToolBar>
                    <Button onAction="#play" text="play" />
                    <Button onAction="#step" text="step"/>
                    <Button onAction="#back" text="back" />
                    <Button onAction="#reset" text="reset" />
                    <Button onAction="#stop" text="stop" />
                    <Button onAction="#save" text="save" />
                    <Button onAction="#load" text="load" />

                </ToolBar>
            </top>
            <bottom>
                <Slider/>
            </bottom>
        </BorderPane>
    </top>

    <center>
        <SplitPane dividerPositions="0.25">
            <items>
                <TabPane>
                </TabPane>
                <BorderPane>
                    <center>
                        <SwingNode fx:id="graphNode"/>
                    </center>
                </BorderPane>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <GridPane fx:id="grid">
            <children>
                <Slider prefWidth="${grid.width}" GridPane.rowIndex="0"> </Slider>
                <ProgressBar fx:id="progress" prefWidth="${progress.parent.width}" GridPane.rowIndex="1"></ProgressBar>
            </children>
        </GridPane>
    </bottom>

</BorderPane>